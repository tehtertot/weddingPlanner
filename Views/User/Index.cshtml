@{
    ViewData["Title"] = "Home Page";
}
@model wedding.Models.RegisterUserModel

<div class="row">
<h1>Register</h1>
<form asp-action="register" method="post">
    <div class="form-group row">
        <label asp-for="FirstName" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-6">
        <input asp-for="FirstName" class="form-control">
        </div>
        <div class="col-sm-3"><span class="rederror" asp-validation-for="FirstName"></span></div>
    </div>
    <div class="form-group row">
        <label asp-for="LastName" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-6">
        <input asp-for="LastName" class="form-control">
        </div>
        <div class="col-sm-3"><span class="rederror" asp-validation-for="LastName"></span></div>
    </div>
    <div class="form-group row">
        <label asp-for="EmailAddress" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-6">
        <input asp-for="EmailAddress" class="form-control">
        </div>
        <div class="col-sm-3"><span class="rederror" asp-validation-for="EmailAddress"></span><span class="rederror">@ViewBag.errors</span></div>
    </div>
    <div class="form-group row">
        <label asp-for="Password" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-6">
        <input asp-for="Password" class="form-control">
        </div>
        <div class="col-sm-3"><span class="rederror" asp-validation-for="Password"></span></div>
    </div>
    <div class="form-group row">
        <label asp-for="ConfirmPassword" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-6">
        <input asp-for="ConfirmPassword" class="form-control">
        </div>
        <div class="col-sm-3"><span class="rederror" asp-validation-for="ConfirmPassword"></span></div>
    </div>
    <div class="row">
    <div class="col-sm-9">
        <input type="submit" value="Register" class="btn btn-primary pull-right">
    </div>
    </div>
</form>    
</div>
<div class="row">
    <h1>Log In</h1>
<form action="login" method="post">
    <div class="form-group row">
        <label class="col-sm-3 col-form-label">Email Address</label>
        <div class="col-sm-4">
        <input class="form-control" type="email" name="email">
        </div>
        <div class="col-sm-3"><span class="rederror">@ViewBag.emailerror</span></div>
    </div>
    <div class="form-group row">
        <label class="col-sm-3 col-form-label">Password</label>
        <div class="col-sm-4">
        <input type="password" class="form-control" name="password">
        </div>
        <div class="col-sm-3"><span class="rederror">@ViewBag.pwerror</span></div>
    </div>
    <div class="row">
    <div class="col-sm-7">
        <input type="submit" value="Log In" class="btn btn-primary pull-right">
    </div>
    </div>
</form>
</div>